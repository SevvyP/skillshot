# Auth0 Configuration
AUTH0_SECRET='use [openssl rand -hex 32] to generate a 32 bytes value'
AUTH0_BASE_URL='http://localhost:3000'
AUTH0_ISSUER_BASE_URL='https://YOUR_AUTH0_DOMAIN'
AUTH0_CLIENT_ID='YOUR_AUTH0_CLIENT_ID'
AUTH0_CLIENT_SECRET='YOUR_AUTH0_CLIENT_SECRET'

# Database Configuration
POSTGRES_USER=skillshot_user
POSTGRES_PASSWORD=skillshot_password
POSTGRES_DB=skillshot_db
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
DATABASE_URL=postgresql://skillshot_user:skillshot_password@localhost:5432/skillshot_db

# Google Gemini API Configuration
GOOGLE_GEMINI_API_KEY='YOUR_GEMINI_API_KEY'

# Supabase Configuration (optional - for using Supabase instead of local Postgres)
# Set USE_SUPABASE=true to use Supabase, false to use local PostgreSQL
USE_SUPABASE=false
SUPABASE_URL='YOUR_SUPABASE_PROJECT_URL'
SUPABASE_KEY='YOUR_SUPABASE_ANON_KEY'
